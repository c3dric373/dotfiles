[settings]
; Limit the amount of events sent to lemonbar within a set timeframe:
; - "Allow <throttle_limit> updates within <throttle_ms> of time"
; Default values:
;throttle_limit = 5
;throttle_ms = 50

[bar/top]
width = 100%
height = 24
bottom = false
dock = false

background = #222222
foreground = #82b1ff

lineheight = 1
padding_left = 0
padding_right = 0
module_margin_left = 0
module_margin_right = 0

font-0 = Monaco:size=12:style=regular0
font-1 = fontawesome:size=14:weight=heavy;0
font-2 = MaterialIcons:size=14;0

modules-left = wifi
modules-center = clock
modules-right = temp volume battery

[module/wifi]
type = internal/network
interface = wlp1s0

interval = 0.5

format-connected =   <label-connected>
format-disconnected =  <label-disconnected>
format-padding = 2

label-connected = %essid% %signal%    %downspeed%  %upspeed%
label-disconnected =  Not connected

[module/cpu]
type = internal/cpu
label = CPU: %percentage%
format-foreground = #82b1ff
format-padding = 2

[module/ram]
type = internal/memory
label = RAM: %percentage_used%
format-foreground = #82b1ff
format-padding = 2

[module/clock]
type = internal/date
date = %A %b %d - %H:%M:%S
format-foreground = #82b1ff
format-padding = 2

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full_at = 97

format-charging = <animation-charging> <label-charging>
format-charging-foreground = #82b1ff
format-charging-padding = 2

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = #82b1ff
format-discharging-padding = 2

format-full = <ramp-capacity> <label-full>
format-full-foreground = #82b1ff
format-full-padding = 2

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate_ms = 750

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/temp]
type = custom/script

exec = temp=$(acpi -t | awk '{print $4}') && echo "temp: $temp°"
format-foreground = #82b1ff
format-padding = 2

[module/volume]
type = internal/volume
speaker_mixer = Speaker
headphone_mixer = Headphone
headphone_control_numid = 13

format-volume = <ramp-volume> <label-volume>
format-volume-foreground = #82b1ff

label-volume = %percentage%
label-volume-foreground = #82b1ff
label-muted = 
label-muted-foreground = #82b1ff

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 


