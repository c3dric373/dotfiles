# Volume keys
XF86AudioRaiseVolume
	~/scripts/volume +

XF86AudioLowerVolume
	~/scripts/volume -

# Backlight keys
XF86MonBrightnessUp
	xbacklight -inc 5

XF86MonBrightnessDown
	xbacklight -dec 5

super + ctrl + alt + l
	xtrlock
	
Print
	scrot -e 'mv $f ~/pictures/screenshots/'

super + space
	dmenu_run -p "Run: " -b -nb '#000000' -nf '#ffffff' -sb '#333333' -sf '#ffffff'

super + v
	tabbed -c vimb -e

XF86AudioPlay
	mpc toggle

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
