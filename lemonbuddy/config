[settings]
; Limit the amount of events sent to lemonbar within a set timeframe:
; - "Allow <throttle_limit> updates within <throttle_ms> of time"
; Default values:
;throttle_limit = 5
;throttle_ms = 50

[bar/top]
width = 100%
height = 32
bottom = false
dock = false

background = #44ffffff
foreground = #fff

lineheight = 1
padding_left = 0
padding_right = 0
module_margin_left = 0
module_margin_right = 0

font-0 = Lucida Mac:size=14:style=bold;0
font-1 = fontawesome:size=16:weight=heavy;0
font-2 = MaterialIcons:size=16;0

modules-left = clock
modules-center = bspwm
modules-right = volume battery

[bar/bot]
width = 100%
height = 32
bottom = true
dock = false

background = #44ffffff
foreground = #fff

lineheight = 1
padding_left = 0
padding_right = 0
module_margin_left = 0
module_margin_right = 0

font-0 = Lucida Mac:size=14;0
font-1 = fontawesome:size=16:weight=heavy;0
font-2 = MaterialIcons:size=18;0

modules-left = temp
modules-right = cpu ram

[module/bspwm]
type = internal/bspwm
label-active = 
