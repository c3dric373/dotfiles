# Volume keys
XF86AudioRaiseVolume
	~/scripts/volume +

XF86AudioLowerVolume
	~/scripts/volume -

# Backlight keys
XF86MonBrightnessUp
	xbacklight -inc 5

XF86MonBrightnessDown
	xbacklight -dec 5

super + ctrl + alt + l
	xtrlock
	
Print
	scrot -e 'mv $f ~/pictures/screenshots/'

super + space
	dmenu_run -p "Run: " -fn "Source Code Pro-20" -nb '#333333' -nf '#ffffff' -sb '#333333' -sf '#f55200' -dim 0.7 -w 960 -x 480 -y 300 -l 1

super + v
	luakit

XF86AudioPlay
	mpc toggle

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
